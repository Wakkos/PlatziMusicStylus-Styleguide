mixin-max-width(width = page-max-width)
  max-width: width
  margin-left: auto
  margin-right: auto




// Referencias de como usar el mixxin.
.container 
  mixin-max-width(800px)

.section
  margin-bottom: 24px
  mixin-max-width(90%)

.section--landing 
  mixin-max-width()


mixin-padding-small(a)
    a + padding


tone(dark = true)
  if dark
    text-color: white
    background: black
  else
    text-color: black
    background: white;
.div
  tone(false)